<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.HelpCenter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/text_mail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/baseline_alternate_email_24"
            android:drawablePadding="15dp"
            android:layout_gravity ="center"
            android:paddingLeft="6dp"
            android:textSize="20sp"
            android:text="GroceryStore@gmail.com"/>

        <TextView
            android:id="@+id/text_contact"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/baseline_contact_phone_24"
            android:drawablePadding="15dp"
            android:layout_gravity ="center"
            android:paddingLeft="6dp"
            android:textSize="20sp"
            android:text="+61445534345"/>

        <TextView
            android:id="@+id/text_fb"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/baseline_connect_without_contact_24"
            android:drawablePadding="15dp"
            android:layout_gravity ="center"
            android:paddingLeft="6dp"
            android:textSize="20sp"
            android:text="Grocery Store West end"/>

        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/baseline_home_work_24"
            android:drawablePadding="15dp"
            android:layout_gravity ="center"
            android:paddingLeft="6dp"
            android:textSize="20sp"
            android:text="6 Brereton Street West end 4101"/>

    </LinearLayout>

</RelativeLayout>